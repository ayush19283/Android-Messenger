<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1AA7EC"/>

    <Button
        android:id="@+id/options"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_three_dots_vertical_svgrepo_com"
        app:layout_constraintRight_toRightOf="parent"
        />
    
    <TextView
        android:id="@+id/logo"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:background="@drawable/ic_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="वार्ता"
        android:background="@null"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/log_username"
        android:layout_marginBottom="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/log_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#1AA7EC"
        android:hint="UserName"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1AA7EC"
        android:alpha="0.5"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/log_username"/>

    <TextView
        android:id="@+id/nu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="New User?"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="90dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginTop="52dp"
        />
    <Button
        android:id="@+id/ask_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="15dp"
        android:textColor="#1aa7ec"
        android:background="@null"
        android:alpha="0.5"
        app:layout_constraintLeft_toRightOf="@+id/nu"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>